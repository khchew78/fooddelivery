<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ordering_date %>
    <%= form.date_select :ordering_date %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.select :user_id, User.order(:name).map {|user| [ user.name, user.id] }, { include_blank: "Please select a costomer" } %>
  
  <div class="field">
    <%= form.label :delivery_address %>
    <%= form.textarea_field :delivery_address %>
  </div>
  
  <div class="field">
    <%= form.label :contact_number %>
    <%= form.text_field :contact_number %>
  </div>
  
  <div class="field">
    <%= form.label :remark %>
    <%= form.text_field :remark %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
