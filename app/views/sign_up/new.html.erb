<div class="center">
<h1>Sign Up</h1><br>

<%= form_with(url: sign_up_path, model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= form.text_field :name %>
  </div>
  
  <br>

  <div class="field">
    <%= form.label :email %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= form.text_field :email %>
  </div>
  
  <br>

  <div class="field">
    <%= form.label :password %>&nbsp;&nbsp;
    <%= form.text_field :password %>
  </div>
  
  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
